<!DOCTYPE html>
<html style="padding-top:70px;">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
            {#{{ encore_entry_link_tags('app') }}
            {{ encore_entry_script_tags('app') }}
            <link rel="stylesheet" href="../../public/build/app.js">
            <link rel="stylesheet" href="../../public/build/app.css">#}
        {% endblock %}
        {% block javascript %}
        {% endblock %}
    </head>
    <body style="margin-left:1%">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        {% block header %}
            {% if is_granted('ROLE_ADMIN') %}
		<td><a href="{{ path('utilisateur') }}" class="btn btn-info">Utilisateur</a></td>
            {% endif %}
	    {% if app.user %}
        	<a href="{{ path('app_logout')}}" class="navbar-brand mt-2 mt-md-0">Deconnexion</a>
            {% else %}
        	<a href="{{ path('app_login')}}" class="navbar-brand mt-2 mt-md-0">Connexion</a>
            {% endif %}	    
        {% endblock %}
        </nav>

        {% block body %}
        {% endblock %}

        {% block footer %}
            <footer id='footer' class="page-footer font-small blue pt-4">
            
            </footer>
        {% endblock %}
    </body>
</html>